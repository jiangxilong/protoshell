# Start the actual session
cmd="@CMAKE_INSTALL_FULL_BINDIR@/greenisland-launcher --execute @CMAKE_INSTALL_FULL_BINDIR@/papyros-shell $@"
if test -z "$DBUS_SESSION_BUS_ADDRESS"; then
    exec dbus-launch --exit-with-session $cmd
else
    exec $cmd
fi
